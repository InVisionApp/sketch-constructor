{
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "Buffer": true,
    "escape": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "no-underscore-dangle": "off",
    "global-require": "off",
    "no-param-reassign": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "globals": {
        "expect": true,
        "beforeAll": true,
        "afterAll": true
      },
      "rules": {
        "global-require": "off",
        "import/no-unresolved": "off"
      }
    }
  ]
}